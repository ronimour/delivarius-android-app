<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp" >

        <TextView
            android:id="@+id/txtvw_nome_produto_item_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:text="Nome"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imgvw_produto_item_pedido" />

        <ImageView
            android:id="@+id/imgvw_produto_item_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/produto_icon_default"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/imgvw_decrementar_qtd_item_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus_icon_24"
            android:paddingRight="10dp"
            android:layout_alignTop="@+id/imgvw_incrementar_qtd_item_pedido"
            android:layout_toEndOf="@+id/txtvw_preco_item_pedido"
            android:layout_marginStart="30dp"
            android:onClick="decrementarItemPedido"
            />

        <TextView
            android:id="@+id/txtvw_preco_item_pedido"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="10,99 R$"
            android:layout_marginLeft="10dp"
            android:textAlignment="textStart"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgvw_produto_item_pedido" />

        <ImageView
            android:id="@+id/imgvw_incrementar_qtd_item_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_icon_24"
            android:layout_marginStart="18dp"
            android:onClick="incrementarItemPedido"
            android:layout_alignTop="@+id/txtvw_preco_item_pedido"
            android:layout_toEndOf="@+id/imgvw_decrementar_qtd_item_pedido" />

        <TextView
            android:id="@+id/txtvw_qtd_item_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="10dp"
            style="@style/TextAppearance.AppCompat.Title"
            android:paddingLeft="15dp"
            android:layout_alignTop="@+id/imgvw_incrementar_qtd_item_pedido"
            android:layout_toEndOf="@+id/imgvw_incrementar_qtd_item_pedido"
            android:layout_marginStart="13dp" />

    </RelativeLayout>


</LinearLayout>

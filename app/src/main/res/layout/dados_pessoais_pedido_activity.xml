<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/lnrlyt__produto_pedido"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="Dados para entrega"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome:"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <EditText
        android:id="@+id/edttxt_nome_cliente_pedido"
        android:hint="ex: João da Silva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endereço de entrega:"
        style="@style/TextAppearance.AppCompat.Title"
        />
    <EditText
        android:id="@+id/edttxt_endereco_entrega_pedido"
        android:hint="ex: Av. das alagoas, 123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone para contato:"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <EditText
        android:id="@+id/edttxt_telefone_contato_pedido"
        android:hint="ex: 84 996090987"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            style="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/txtvw_total_item_pedido"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:paddingLeft="5dp"
            android:text="10,99 R$" />

    </LinearLayout>


    <Button
            android:id="@+id/btn_finalizar_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Concluir"
            android:onClick="concluir"
            />

</LinearLayout>